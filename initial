import React, { useState, useEffect, useRef } from 'react';
import { 
  LayoutDashboard, 
  HardHat, 
  ClipboardList, 
  Calculator, 
  Plus, 
  Trash2, 
  CheckCircle2, 
  Clock, 
  DollarSign,
  ChevronRight,
  Building2,
  Users,
  Calendar,
  Hammer,
  PenTool,
  CloudSun,
  Wind,
  Thermometer,
  Droplets,
  Eraser,
  Download,
  Undo,
  MousePointer2,
  Square
} from 'lucide-react';

// Mock Initial Data
const INITIAL_PROJECTS = [
  { id: 1, name: "Sunset Villa Renovation", client: "Mr. Johnson", status: "In Progress", progress: 65, budget: 150000, deadline: "2023-12-15" },
  { id: 2, name: "Downtown Office Fit-out", client: "TechCorp Inc.", status: "Planning", progress: 15, budget: 45000, deadline: "2024-01-20" },
  { id: 3, name: "Maple Street Foundation", client: "City Council", status: "Completed", progress: 100, budget: 28000, deadline: "2023-10-30" },
];

const INITIAL_TASKS = [
  { id: 1, text: "Order concrete for foundation", completed: false, priority: "High" },
  { id: 2, text: "Submit permit applications for Villa", completed: true, priority: "High" },
  { id: 3, text: "Schedule electrical inspection", completed: false, priority: "Medium" },
  { id: 4, text: "Team safety briefing", completed: false, priority: "Low" },
];

export default function App() {
  const [activeTab, setActiveTab] = useState('dashboard');
  const [projects, setProjects] = useState(INITIAL_PROJECTS);
  const [tasks, setTasks] = useState(INITIAL_TASKS);
  const [showNewProjectModal, setShowNewProjectModal] = useState(false);

  // Stats Calculation
  const totalBudget = projects.reduce((acc, curr) => acc + curr.budget, 0);
  const activeProjectsCount = projects.filter(p => p.status === 'In Progress').length;
  const completedProjectsCount = projects.filter(p => p.status === 'Completed').length;

  const handleAddTask = (text) => {
    const newTask = { id: Date.now(), text, completed: false, priority: "Medium" };
    setTasks([newTask, ...tasks]);
  };

  const toggleTask = (id) => {
    setTasks(tasks.map(t => t.id === id ? { ...t, completed: !t.completed } : t));
  };

  const renderContent = () => {
    switch(activeTab) {
      case 'dashboard':
        return <DashboardView 
                  projects={projects} 
                  tasks={tasks} 
                  stats={{ totalBudget, activeProjectsCount, completedProjectsCount }} 
               />;
      case 'projects':
        return <ProjectsView 
                  projects={projects} 
                  setProjects={setProjects} 
                  setShowNewProjectModal={setShowNewProjectModal}
               />;
      case 'estimator':
        return <EstimatorView />;
      case 'tasks':
        return <TasksView tasks={tasks} onAddTask={handleAddTask} onToggleTask={toggleTask} setTasks={setTasks} />;
      case 'sketchpad':
        return <SketchpadView />;
      default:
        return <DashboardView projects={projects} tasks={tasks} stats={{ totalBudget, activeProjectsCount, completedProjectsCount }} />;
    }
  };

  return (
    <div className="flex h-screen bg-slate-50 font-sans text-slate-900">
      {/* Sidebar */}
      <aside className="w-20 lg:w-64 bg-slate-900 text-white flex-shrink-0 flex flex-col transition-all duration-300">
        <div className="p-6 flex items-center gap-3 border-b border-slate-800">
          <div className="bg-orange-500 p-2 rounded-lg">
            <Hammer className="w-6 h-6 text-white" />
          </div>
          <span className="font-bold text-xl hidden lg:block tracking-tight">BuildMate</span>
        </div>
        
        <nav className="flex-1 py-6 px-3 space-y-2">
          <NavItem icon={<LayoutDashboard size={22} />} label="Dashboard" active={activeTab === 'dashboard'} onClick={() => setActiveTab('dashboard')} />
          <NavItem icon={<HardHat size={22} />} label="Projects" active={activeTab === 'projects'} onClick={() => setActiveTab('projects')} />
          <NavItem icon={<PenTool size={22} />} label="Sketchpad" active={activeTab === 'sketchpad'} onClick={() => setActiveTab('sketchpad')} />
          <NavItem icon={<Calculator size={22} />} label="Estimator" active={activeTab === 'estimator'} onClick={() => setActiveTab('estimator')} />
          <NavItem icon={<ClipboardList size={22} />} label="Tasks" active={activeTab === 'tasks'} onClick={() => setActiveTab('tasks')} />
        </nav>

        <div className="p-4 border-t border-slate-800">
          <div className="flex items-center gap-3 text-slate-400 hover:text-white cursor-pointer transition-colors p-2 rounded-lg hover:bg-slate-800">
            <div className="w-8 h-8 rounded-full bg-slate-700 flex items-center justify-center font-bold text-sm">JS</div>
            <div className="hidden lg:block">
              <p className="text-sm font-medium text-white">John Smith</p>
              <p className="text-xs">Site Manager</p>
            </div>
          </div>
        </div>
      </aside>

      {/* Main Content */}
      <main className="flex-1 overflow-y-auto">
        <header className="bg-white border-b border-slate-200 px-8 py-5 flex justify-between items-center sticky top-0 z-10">
          <h1 className="text-2xl font-bold text-slate-800 capitalize">{activeTab}</h1>
          <div className="flex items-center gap-4">
            <span className="text-sm text-slate-500 hidden sm:inline-block">{new Date().toLocaleDateString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' })}</span>
            <button className="bg-orange-500 hover:bg-orange-600 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors shadow-sm flex items-center gap-2">
              <Plus size={16} /> <span className="hidden sm:inline">Quick Action</span>
            </button>
          </div>
        </header>
        
        <div className="p-4 lg:p-8 max-w-7xl mx-auto">
          {renderContent()}
        </div>
      </main>

      {/* Simple Modal Implementation */}
      {showNewProjectModal && (
        <div className="fixed inset-0 bg-black/50 flex items-center justify-center z-50 p-4">
          <div className="bg-white rounded-xl shadow-2xl max-w-md w-full p-6 animate-in fade-in zoom-in duration-200">
            <h2 className="text-xl font-bold mb-4">Add New Project</h2>
            <form onSubmit={(e) => {
              e.preventDefault();
              const formData = new FormData(e.target);
              const newProject = {
                id: Date.now(),
                name: formData.get('name'),
                client: formData.get('client'),
                status: 'Planning',
                progress: 0,
                budget: Number(formData.get('budget')),
                deadline: formData.get('deadline')
              };
              setProjects([newProject, ...projects]);
              setShowNewProjectModal(false);
            }} className="space-y-4">
              <div>
                <label className="block text-sm font-medium text-slate-700 mb-1">Project Name</label>
                <input name="name" required className="w-full border border-slate-300 rounded-lg p-2 focus:ring-2 focus:ring-orange-500 outline-none" placeholder="e.g. Riverside Complex" />
              </div>
              <div>
                <label className="block text-sm font-medium text-slate-700 mb-1">Client Name</label>
                <input name="client" required className="w-full border border-slate-300 rounded-lg p-2 focus:ring-2 focus:ring-orange-500 outline-none" placeholder="e.g. Sarah Connor" />
              </div>
              <div className="grid grid-cols-2 gap-4">
                <div>
                  <label className="block text-sm font-medium text-slate-700 mb-1">Budget ($)</label>
                  <input name="budget" type="number" required className="w-full border border-slate-300 rounded-lg p-2 focus:ring-2 focus:ring-orange-500 outline-none" placeholder="50000" />
                </div>
                <div>
                  <label className="block text-sm font-medium text-slate-700 mb-1">Deadline</label>
                  <input name="deadline" type="date" required className="w-full border border-slate-300 rounded-lg p-2 focus:ring-2 focus:ring-orange-500 outline-none" />
                </div>
              </div>
              <div className="flex gap-3 mt-6">
                <button type="button" onClick={() => setShowNewProjectModal(false)} className="flex-1 py-2 text-slate-600 hover:bg-slate-100 rounded-lg font-medium">Cancel</button>
                <button type="submit" className="flex-1 py-2 bg-orange-500 text-white hover:bg-orange-600 rounded-lg font-medium">Create Project</button>
              </div>
            </form>
          </div>
        </div>
      )}
    </div>
  );
}

function NavItem({ icon, label, active, onClick }) {
  return (
    <button 
      onClick={onClick}
      className={`w-full flex items-center gap-3 p-3 rounded-lg transition-all duration-200 group ${
        active 
        ? 'bg-orange-500 text-white shadow-lg shadow-orange-500/20' 
        : 'text-slate-400 hover:bg-slate-800 hover:text-white'
      }`}
    >
      {icon}
      <span className="font-medium hidden lg:block">{label}</span>
      {active && <div className="ml-auto w-1.5 h-1.5 rounded-full bg-white hidden lg:block" />}
    </button>
  );
}

function DashboardView({ projects, tasks, stats }) {
  return (
    <div className="space-y-6">
      {/* Site Intel / Weather Widget */}
      <div className="bg-gradient-to-r from-sky-600 to-indigo-700 rounded-xl p-6 text-white shadow-lg relative overflow-hidden">
        <div className="absolute top-0 right-0 p-8 opacity-10">
          <CloudSun size={120} />
        </div>
        <div className="relative z-10">
           <div className="flex flex-col md:flex-row md:items-center justify-between gap-6">
             <div>
               <h3 className="text-xl font-bold flex items-center gap-2 mb-1">
                 <CloudSun className="text-yellow-300" /> Site Intel: Main HQ
               </h3>
               <p className="text-sky-100 opacity-90 text-sm">Real-time workability analysis</p>
             </div>
             <div className="flex gap-6">
                <div className="flex items-center gap-3 bg-white/10 p-3 rounded-lg backdrop-blur-sm">
                  <Thermometer className="text-orange-300" />
                  <div>
                    <p className="text-xs text-sky-200 font-bold uppercase">Temp</p>
                    <p className="font-bold text-lg">72°F</p>
                  </div>
                </div>
                <div className="flex items-center gap-3 bg-white/10 p-3 rounded-lg backdrop-blur-sm">
                  <Wind className="text-sky-300" />
                  <div>
                    <p className="text-xs text-sky-200 font-bold uppercase">Wind</p>
                    <p className="font-bold text-lg">8 mph</p>
                  </div>
                </div>
                <div className="flex items-center gap-3 bg-white/10 p-3 rounded-lg backdrop-blur-sm">
                  <Droplets className="text-blue-300" />
                  <div>
                    <p className="text-xs text-sky-200 font-bold uppercase">Humidity</p>
                    <p className="font-bold text-lg">45%</p>
                  </div>
                </div>
             </div>
           </div>
           
           <div className="mt-6 pt-6 border-t border-white/20 grid grid-cols-1 md:grid-cols-2 gap-4">
             <div className="flex items-center gap-2 text-sm font-medium">
               <span className="w-3 h-3 rounded-full bg-emerald-400"></span>
               Concrete Pouring: <span className="text-emerald-300">Optimal Conditions</span>
             </div>
             <div className="flex items-center gap-2 text-sm font-medium">
               <span className="w-3 h-3 rounded-full bg-emerald-400"></span>
               Crane Operation: <span className="text-emerald-300">Safe (Wind &lt; 20mph)</span>
             </div>
           </div>
        </div>
      </div>

      {/* Stats Cards */}
      <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <StatCard 
          title="Total Budget" 
          value={`$${stats.totalBudget.toLocaleString()}`} 
          icon={<DollarSign className="text-emerald-500" />} 
          trend="+12% from last month"
          trendUp={true}
        />
        <StatCard 
          title="Active Projects" 
          value={stats.activeProjectsCount} 
          icon={<HardHat className="text-orange-500" />} 
          trend="2 nearing deadline"
          trendUp={true}
        />
        <StatCard 
          title="Completed" 
          value={stats.completedProjectsCount} 
          icon={<CheckCircle2 className="text-blue-500" />} 
          trend="+3 this quarter"
          trendUp={true}
        />
        <StatCard 
          title="Pending Tasks" 
          value={tasks.filter(t => !t.completed).length} 
          icon={<ClipboardList className="text-purple-500" />} 
          trend="4 high priority"
          trendUp={false}
        />
      </div>

      <div className="grid grid-cols-1 lg:grid-cols-3 gap-6">
        {/* Recent Projects */}
        <div className="lg:col-span-2 bg-white rounded-xl shadow-sm border border-slate-200 p-6">
          <div className="flex justify-between items-center mb-6">
            <h3 className="text-lg font-bold text-slate-800">Active Projects</h3>
            <button className="text-sm text-orange-600 font-medium hover:text-orange-700">View All</button>
          </div>
          <div className="space-y-4">
            {projects.slice(0, 3).map(project => (
              <div key={project.id} className="flex items-center p-4 bg-slate-50 rounded-lg border border-slate-100 hover:border-orange-200 transition-colors">
                <div className="h-10 w-10 rounded-full bg-orange-100 flex items-center justify-center text-orange-600 font-bold mr-4">
                  {project.name.charAt(0)}
                </div>
                <div className="flex-1">
                  <h4 className="font-semibold text-slate-900">{project.name}</h4>
                  <p className="text-sm text-slate-500">{project.client} • Due {project.deadline}</p>
                </div>
                <div className="w-24 text-right">
                  <div className="flex justify-between text-xs mb-1 font-medium text-slate-600">
                    <span>Progress</span>
                    <span>{project.progress}%</span>
                  </div>
                  <div className="h-2 w-full bg-slate-200 rounded-full overflow-hidden">
                    <div className="h-full bg-orange-500 rounded-full" style={{ width: `${project.progress}%` }}></div>
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>

        {/* Quick Tasks */}
        <div className="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
          <h3 className="text-lg font-bold text-slate-800 mb-6">Today's Focus</h3>
          <div className="space-y-3">
            {tasks.slice(0, 4).map(task => (
              <div key={task.id} className={`flex items-start gap-3 p-3 rounded-lg ${task.completed ? 'bg-slate-50 opacity-60' : 'bg-white'}`}>
                <div className={`mt-1 h-5 w-5 rounded border flex items-center justify-center ${task.completed ? 'bg-green-500 border-green-500' : 'border-slate-300'}`}>
                  {task.completed && <CheckCircle2 size={14} className="text-white" />}
                </div>
                <div>
                  <p className={`text-sm font-medium ${task.completed ? 'line-through text-slate-500' : 'text-slate-800'}`}>{task.text}</p>
                  <span className={`text-[10px] uppercase font-bold tracking-wider px-2 py-0.5 rounded-full ${
                    task.priority === 'High' ? 'bg-red-100 text-red-700' : 
                    task.priority === 'Medium' ? 'bg-yellow-100 text-yellow-700' : 'bg-blue-100 text-blue-700'
                  }`}>{task.priority}</span>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  );
}

function StatCard({ title, value, icon, trend, trendUp }) {
  return (
    <div className="bg-white p-6 rounded-xl shadow-sm border border-slate-200">
      <div className="flex justify-between items-start mb-4">
        <div>
          <p className="text-sm font-medium text-slate-500">{title}</p>
          <h3 className="text-2xl font-bold text-slate-800 mt-1">{value}</h3>
        </div>
        <div className="p-2 bg-slate-50 rounded-lg">{icon}</div>
      </div>
      <div className={`text-xs font-medium flex items-center gap-1 ${trendUp ? 'text-emerald-600' : 'text-slate-500'}`}>
        <span>{trend}</span>
      </div>
    </div>
  );
}

function ProjectsView({ projects, setProjects, setShowNewProjectModal }) {
  const handleDelete = (id) => {
    setProjects(projects.filter(p => p.id !== id));
  };

  return (
    <div className="space-y-6">
      <div className="flex justify-between items-center">
        <h2 className="text-lg font-semibold text-slate-700">All Projects</h2>
        <button 
          onClick={() => setShowNewProjectModal(true)}
          className="bg-orange-500 hover:bg-orange-600 text-white px-4 py-2 rounded-lg text-sm font-medium flex items-center gap-2 transition-colors"
        >
          <Plus size={18} /> New Project
        </button>
      </div>

      <div className="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">
        {projects.map(project => (
          <div key={project.id} className="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden hover:shadow-md transition-shadow group">
            <div className="p-6">
              <div className="flex justify-between items-start mb-4">
                <div className={`px-3 py-1 rounded-full text-xs font-bold uppercase tracking-wider ${
                  project.status === 'Completed' ? 'bg-emerald-100 text-emerald-700' :
                  project.status === 'In Progress' ? 'bg-blue-100 text-blue-700' :
                  'bg-slate-100 text-slate-700'
                }`}>
                  {project.status}
                </div>
                <button onClick={() => handleDelete(project.id)} className="text-slate-400 hover:text-red-500 transition-colors">
                  <Trash2 size={18} />
                </button>
              </div>
              
              <h3 className="text-lg font-bold text-slate-900 mb-1">{project.name}</h3>
              <p className="text-sm text-slate-500 flex items-center gap-2 mb-4">
                <Users size={14} /> {project.client}
              </p>
              
              <div className="space-y-3 mb-6">
                <div className="flex items-center text-sm text-slate-600 gap-3">
                  <DollarSign size={16} className="text-slate-400" />
                  <span>Budget: <span className="font-semibold text-slate-900">${project.budget.toLocaleString()}</span></span>
                </div>
                <div className="flex items-center text-sm text-slate-600 gap-3">
                  <Calendar size={16} className="text-slate-400" />
                  <span>Deadline: <span className="font-semibold text-slate-900">{project.deadline}</span></span>
                </div>
              </div>

              <div>
                <div className="flex justify-between text-xs mb-2 font-medium text-slate-600">
                  <span>Completion</span>
                  <span>{project.progress}%</span>
                </div>
                <div className="h-2 w-full bg-slate-100 rounded-full overflow-hidden">
                  <div className={`h-full rounded-full transition-all duration-500 ${
                    project.progress === 100 ? 'bg-emerald-500' : 'bg-orange-500'
                  }`} style={{ width: `${project.progress}%` }}></div>
                </div>
              </div>
            </div>
            <div className="bg-slate-50 p-3 border-t border-slate-100 flex justify-between items-center px-6">
              <span className="text-xs font-medium text-slate-500">Updated 2 days ago</span>
              <button className="text-orange-600 hover:text-orange-700 text-sm font-medium flex items-center gap-1">
                Details <ChevronRight size={16} />
              </button>
            </div>
          </div>
        ))}
      </div>
    </div>
  );
}

function EstimatorView() {
  const [items, setItems] = useState([]);
  const [newItem, setNewItem] = useState({ name: '', quantity: 1, price: 0 });

  const addItem = (e) => {
    e.preventDefault();
    if (!newItem.name || newItem.price <= 0) return;
    setItems([...items, { ...newItem, id: Date.now(), total: newItem.quantity * newItem.price }]);
    setNewItem({ name: '', quantity: 1, price: 0 });
  };

  const deleteItem = (id) => {
    setItems(items.filter(item => item.id !== id));
  };

  const grandTotal = items.reduce((acc, curr) => acc + curr.total, 0);

  return (
    <div className="grid grid-cols-1 lg:grid-cols-3 gap-8 h-full">
      <div className="lg:col-span-2 space-y-6">
        <div className="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
          <h2 className="text-lg font-bold text-slate-800 mb-4 flex items-center gap-2">
            <Calculator className="text-orange-500" /> Material Cost Estimator
          </h2>
          <form onSubmit={addItem} className="grid grid-cols-1 md:grid-cols-12 gap-4 mb-6 bg-slate-50 p-4 rounded-lg border border-slate-200">
            <div className="md:col-span-5">
              <label className="block text-xs font-bold text-slate-500 uppercase mb-1">Item Description</label>
              <input 
                type="text" 
                placeholder="e.g. 2x4 Lumber Studs" 
                className="w-full p-2 border border-slate-300 rounded focus:ring-2 focus:ring-orange-500 outline-none"
                value={newItem.name}
                onChange={e => setNewItem({...newItem, name: e.target.value})}
              />
            </div>
            <div className="md:col-span-2">
              <label className="block text-xs font-bold text-slate-500 uppercase mb-1">Qty</label>
              <input 
                type="number" 
                min="1"
                className="w-full p-2 border border-slate-300 rounded focus:ring-2 focus:ring-orange-500 outline-none"
                value={newItem.quantity}
                onChange={e => setNewItem({...newItem, quantity: Number(e.target.value)})}
              />
            </div>
            <div className="md:col-span-3">
              <label className="block text-xs font-bold text-slate-500 uppercase mb-1">Unit Price ($)</label>
              <input 
                type="number" 
                min="0"
                step="0.01"
                placeholder="0.00"
                className="w-full p-2 border border-slate-300 rounded focus:ring-2 focus:ring-orange-500 outline-none"
                value={newItem.price}
                onChange={e => setNewItem({...newItem, price: Number(e.target.value)})}
              />
            </div>
            <div className="md:col-span-2 flex items-end">
              <button type="submit" className="w-full bg-slate-900 text-white p-2 rounded hover:bg-slate-800 font-medium transition-colors">Add</button>
            </div>
          </form>

          {items.length > 0 ? (
            <div className="overflow-hidden rounded-lg border border-slate-200">
              <table className="w-full text-left text-sm">
                <thead className="bg-slate-50 text-slate-600 font-semibold border-b border-slate-200">
                  <tr>
                    <th className="p-4">Description</th>
                    <th className="p-4 text-center">Qty</th>
                    <th className="p-4 text-right">Unit Price</th>
                    <th className="p-4 text-right">Total</th>
                    <th className="p-4 w-10"></th>
                  </tr>
                </thead>
                <tbody className="divide-y divide-slate-100">
                  {items.map((item) => (
                    <tr key={item.id} className="hover:bg-slate-50">
                      <td className="p-4 font-medium text-slate-800">{item.name}</td>
                      <td className="p-4 text-center text-slate-600">{item.quantity}</td>
                      <td className="p-4 text-right text-slate-600">${item.price.toFixed(2)}</td>
                      <td className="p-4 text-right font-semibold text-slate-900">${item.total.toFixed(2)}</td>
                      <td className="p-4 text-center">
                        <button onClick={() => deleteItem(item.id)} className="text-slate-400 hover:text-red-500 transition-colors">
                          <Trash2 size={16} />
                        </button>
                      </td>
                    </tr>
                  ))}
                </tbody>
                <tfoot className="bg-slate-900 text-white">
                  <tr>
                    <td colSpan="3" className="p-4 text-right font-bold uppercase tracking-wider">Grand Total Estimate</td>
                    <td className="p-4 text-right font-bold text-lg text-orange-400">${grandTotal.toFixed(2)}</td>
                    <td></td>
                  </tr>
                </tfoot>
              </table>
            </div>
          ) : (
            <div className="text-center py-12 text-slate-400 bg-slate-50 rounded-lg border border-dashed border-slate-300">
              <Calculator size={48} className="mx-auto mb-3 opacity-50" />
              <p>Add items above to start your estimate</p>
            </div>
          )}
        </div>
      </div>

      <div className="bg-orange-500 rounded-xl p-6 text-white h-fit shadow-lg shadow-orange-500/20">
        <h3 className="font-bold text-lg mb-4 border-b border-orange-400/50 pb-4">Estimation Tips</h3>
        <ul className="space-y-4 text-sm text-orange-50">
          <li className="flex gap-3">
            <div className="bg-white/20 p-1.5 rounded h-fit"><Clock size={16} /></div>
            <span>Always add a <strong>10-15% contingency</strong> buffer for unexpected costs or price fluctuations.</span>
          </li>
          <li className="flex gap-3">
            <div className="bg-white/20 p-1.5 rounded h-fit"><Users size={16} /></div>
            <span>Don't forget to factor in <strong>labor costs</strong>. A common rule is 50/50 material to labor ratio.</span>
          </li>
          <li className="flex gap-3">
            <div className="bg-white/20 p-1.5 rounded h-fit"><ClipboardList size={16} /></div>
            <span>Check permit requirements early. Permit fees can vary significantly by location.</span>
          </li>
        </ul>
        <button className="w-full mt-8 bg-white text-orange-600 py-3 rounded-lg font-bold hover:bg-orange-50 transition-colors shadow-sm">
          Export Estimate to PDF
        </button>
      </div>
    </div>
  );
}

function SketchpadView() {
  const canvasRef = useRef(null);
  const [isDrawing, setIsDrawing] = useRef(false);
  const [color, setColor] = useState('#000000');
  const [tool, setTool] = useState('pen'); // pen, eraser
  
  // Set up canvas when component mounts
  useEffect(() => {
    const canvas = canvasRef.current;
    if(!canvas) return;
    
    // Set canvas resolution for high DPI
    const dpr = window.devicePixelRatio || 1;
    const rect = canvas.getBoundingClientRect();
    
    canvas.width = rect.width * dpr;
    canvas.height = rect.height * dpr;
    
    const ctx = canvas.getContext('2d');
    ctx.scale(dpr, dpr);
    ctx.lineCap = 'round';
    ctx.lineJoin = 'round';
    
    // Draw Grid Background
    drawGrid(ctx, rect.width, rect.height);
  }, []);

  const drawGrid = (ctx, width, height) => {
    ctx.save();
    ctx.strokeStyle = '#e2e8f0';
    ctx.lineWidth = 1;
    const gridSize = 30;

    for(let x = 0; x <= width; x += gridSize) {
      ctx.beginPath();
      ctx.moveTo(x, 0);
      ctx.lineTo(x, height);
      ctx.stroke();
    }
    for(let y = 0; y <= height; y += gridSize) {
      ctx.beginPath();
      ctx.moveTo(0, y);
      ctx.lineTo(width, y);
      ctx.stroke();
    }
    ctx.restore();
  }

  const startDrawing = (e) => {
    const canvas = canvasRef.current;
    if(!canvas) return;
    const ctx = canvas.getContext('2d');
    const rect = canvas.getBoundingClientRect();
    const x = e.nativeEvent.offsetX;
    const y = e.nativeEvent.offsetY;

    ctx.beginPath();
    ctx.moveTo(x, y);
    ctx.strokeStyle = tool === 'eraser' ? '#ffffff' : color;
    ctx.lineWidth = tool === 'eraser' ? 20 : 3;
    isDrawing.current = true;
  };

  const draw = (e) => {
    if (!isDrawing.current) return;
    const canvas = canvasRef.current;
    const ctx = canvas.getContext('2d');
    const x = e.nativeEvent.offsetX;
    const y = e.nativeEvent.offsetY;
    
    ctx.lineTo(x, y);
    ctx.stroke();
  };

  const stopDrawing = () => {
    isDrawing.current = false;
  };
  
  const clearCanvas = () => {
    const canvas = canvasRef.current;
    const ctx = canvas.getContext('2d');
    const rect = canvas.getBoundingClientRect();
    ctx.clearRect(0, 0, rect.width, rect.height);
    drawGrid(ctx, rect.width, rect.height);
  };

  return (
    <div className="h-full flex flex-col gap-4">
      <div className="flex justify-between items-center bg-white p-4 rounded-xl shadow-sm border border-slate-200">
        <div className="flex items-center gap-4">
          <div className="bg-orange-100 p-2 rounded-lg text-orange-600">
            <PenTool size={24} />
          </div>
          <div>
            <h2 className="text-lg font-bold text-slate-800">Blueprint Sketchpad</h2>
            <p className="text-sm text-slate-500">Draw quick diagrams and site notes</p>
          </div>
        </div>
        
        <div className="flex items-center gap-2">
           <div className="flex bg-slate-100 rounded-lg p-1 gap-1">
             <button 
               onClick={() => setTool('pen')}
               className={`p-2 rounded ${tool === 'pen' ? 'bg-white shadow text-slate-900' : 'text-slate-500 hover:text-slate-700'}`}
               title="Pen Tool"
             >
               <PenTool size={18} />
             </button>
             <button 
                onClick={() => setTool('eraser')}
                className={`p-2 rounded ${tool === 'eraser' ? 'bg-white shadow text-slate-900' : 'text-slate-500 hover:text-slate-700'}`}
                title="Eraser"
             >
               <Eraser size={18} />
             </button>
           </div>
           
           <div className="h-8 w-px bg-slate-200 mx-2"></div>

           <div className="flex gap-2">
             {['#000000', '#ef4444', '#3b82f6', '#22c55e'].map(c => (
               <button 
                 key={c}
                 onClick={() => { setColor(c); setTool('pen'); }}
                 className={`w-8 h-8 rounded-full border-2 ${color === c && tool === 'pen' ? 'border-slate-900 transform scale-110' : 'border-transparent'}`}
                 style={{ backgroundColor: c }}
               />
             ))}
           </div>
           
           <div className="h-8 w-px bg-slate-200 mx-2"></div>
           
           <button onClick={clearCanvas} className="p-2 text-slate-500 hover:text-red-500 transition-colors" title="Clear All">
             <Trash2 size={20} />
           </button>
           <button className="bg-slate-900 text-white px-4 py-2 rounded-lg text-sm font-medium flex items-center gap-2 hover:bg-slate-800">
             <Download size={16} /> Save
           </button>
        </div>
      </div>

      <div className="flex-1 bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden relative cursor-crosshair">
        <canvas
          ref={canvasRef}
          onMouseDown={startDrawing}
          onMouseMove={draw}
          onMouseUp={stopDrawing}
          onMouseLeave={stopDrawing}
          className="w-full h-full touch-none"
          style={{ width: '100%', height: '100%' }}
        />
        <div className="absolute bottom-4 right-4 bg-white/90 backdrop-blur border border-slate-200 p-2 rounded text-xs text-slate-500">
          Canvas 800x600 • 1:50 Scale
        </div>
      </div>
    </div>
  );
}

function TasksView({ tasks, onAddTask, onToggleTask, setTasks }) {
  const [newTaskText, setNewTaskText] = useState("");

  const handleSubmit = (e) => {
    e.preventDefault();
    if (newTaskText.trim()) {
      onAddTask(newTaskText);
      setNewTaskText("");
    }
  };

  const deleteCompleted = () => {
    setTasks(tasks.filter(t => !t.completed));
  };

  return (
    <div className="max-w-4xl mx-auto">
      <div className="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
        <div className="p-6 border-b border-slate-100 bg-slate-50/50 flex justify-between items-center">
          <div>
            <h2 className="text-lg font-bold text-slate-800">Task Manager</h2>
            <p className="text-sm text-slate-500">Keep track of daily site activities</p>
          </div>
          {tasks.some(t => t.completed) && (
            <button onClick={deleteCompleted} className="text-sm text-red-600 hover:text-red-700 font-medium">
              Clear Completed
            </button>
          )}
        </div>
        
        <div className="p-6">
          <form onSubmit={handleSubmit} className="flex gap-3 mb-8">
            <input
              type="text"
              className="flex-1 p-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-orange-500 outline-none shadow-sm"
              placeholder="Add a new task..."
              value={newTaskText}
              onChange={(e) => setNewTaskText(e.target.value)}
            />
            <button type="submit" className="bg-slate-900 text-white px-6 py-3 rounded-lg font-medium hover:bg-slate-800 transition-colors">
              Add Task
            </button>
          </form>

          <div className="space-y-1">
            {tasks.length === 0 && (
              <p className="text-center text-slate-400 py-8">No tasks yet. Enjoy your coffee! ☕</p>
            )}
            
            {tasks.map(task => (
              <div 
                key={task.id} 
                onClick={() => onToggleTask(task.id)}
                className={`flex items-center gap-4 p-4 rounded-lg cursor-pointer transition-all duration-200 border border-transparent ${
                  task.completed 
                  ? 'bg-slate-50 opacity-60' 
                  : 'hover:bg-slate-50 hover:border-slate-200 shadow-sm'
                }`}
              >
                <div className={`flex-shrink-0 w-6 h-6 rounded-full border-2 flex items-center justify-center transition-colors ${
                  task.completed 
                  ? 'bg-orange-500 border-orange-500' 
                  : 'border-slate-300 bg-white'
                }`}>
                  {task.completed && <CheckCircle2 size={14} className="text-white" />}
                </div>
                
                <span className={`flex-1 font-medium ${task.completed ? 'line-through text-slate-500' : 'text-slate-800'}`}>
                  {task.text}
                </span>

                <span className={`text-xs font-bold px-2 py-1 rounded border ${
                  task.priority === 'High' ? 'bg-red-50 text-red-700 border-red-100' : 
                  task.priority === 'Medium' ? 'bg-yellow-50 text-yellow-700 border-yellow-100' : 
                  'bg-blue-50 text-blue-700 border-blue-100'
                }`}>
                  {task.priority}
                </span>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  );
}
